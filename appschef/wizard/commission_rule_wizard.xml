<odoo>
    <data>
        <record id="view_commission_rule_wizard_form" model="ir.ui.view">
            <field name="name">commission.rule.wizard.form</field>
            <field name="model">commission.rule.wizard</field>
            <field name="arch" type="xml">
                <form string="Create Commission Rule">
                    <group>
                        <field name="product_id"/>
                        <field name="percentage"/>
                        <field name="employee_id"/>
                    </group>
                    <footer>
                        <button string="Create" type="object" name="create_commission_rule" class="btn-primary"/>
                        <button string="Cancel" class="btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>
    </data>
</odoo>
